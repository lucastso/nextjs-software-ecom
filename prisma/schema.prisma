generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  category String
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  categoryId  String @unique @db.ObjectId
  description String
  image       String
  price       Float
  title       String
}
